{
  "manifest_version": 3,
  "name": "SecureWeb AI",
  "version": "1.0.0",
  "description": "Professional web security and privacy analyzer using Gemini AI.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SecureWeb AI"
  },
  "options_page": "index.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
